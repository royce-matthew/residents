

<h4 align="center" style="margin-top:10%">Bugao - Hooker Tracking System</h4>
<%if @resident != nil%>
<div id="notification">
	<img src="
	<%if @resident.photo %>
		<%= @resident.photo_link%>
	<% else %>
		<%= asset_path 'hooker.png'%>
	<% end %>
	 " class="notification_logo">
	<span class="notification_text"><%= @resident.name%> is <%=@resident.location%></span>
</div>
<%end%>
<%if @message=="id error" %>
	<div id="notification" style="background-color:rgba(125,0,0,0.24);">
	Error, Invalid ID <%= @id_num%>, Please Refer to your 6-digit hooker ID
	</div>
<% end %>
<br>
<br>

<div align="center" class="container" > 

<a href="/residents" class="importantBars">View Hookers</a>|<a href="/logs" class="importantBars">View Logs</a>
<br>
<sub>Type / Barcode Zap 6 Digit Hooker Number Below to log in or out</sub>
<br>

<input id="input_bar" autofocus >
</div>

<script>

input_bar = document.getElementById("input_bar")

$('#input_bar').bind('input', function() { 
    v = ($(this).val())
    if (v.length >= 6)
    {
    	window.location='/modify/'+v[0]+v[1]+v[2]+v[3]+v[4]+v[5]
    }

});
$( document ).ready(function() {
    $("#notification").delay(1000).fadeOut("slow");
});

</script>